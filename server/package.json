{
  "name": "dot-web-demo-server",
  "version": "1.0.4",
  "description": "NodeJS GraphQL demo server.",
  "main": "dist/server.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start:local": "yarn build && yarn start",
    "start": "node dist/server.js",
    "dev": "yarn codegen && nodemon src/server.ts",
    "build": "rimraf dist && yarn codegen && tsc && cp src/graphQL/schema.graphql dist/graphQL/schema.graphql",
    "codegen": "graphql-codegen --config ./graphql-codegen.yml",
    "test": "mocha --config .mocharc.json src/**/*.spec.ts",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0"
  },
  "dependencies": {
    "apollo-server-express": "^3.6.2",
    "axios": "^0.26.1",
    "axios-mock-adapter": "^1.20.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "graphql": "^16.3.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.5",
    "@graphql-codegen/typescript-resolvers": "^2.4.3",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.13",
    "axios-mock-adapter": "^1.20.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint-plugin-graphql": "^4.0.0",
    "mocha": "^9.2.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "tsc-watch": "^5.0.3"
  }
}
