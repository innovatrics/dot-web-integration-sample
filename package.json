{
  "name": "dot-web-demo",
  "version": "2.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "yarn server:dev & yarn web-demo-client:dev & yarn ocr-demo-client:dev",
    "web-demo:dev": "yarn server:dev & yarn web-demo-client:dev",
    "ocr-demo:dev": "yarn server:dev & yarn ocr-demo-client:dev",
    "server:dev": "yarn workspace dot-web-demo-server dev",
    "server:start": "yarn workspace dot-web-demo-server start",
    "server:build": "yarn workspace dot-web-demo-server build",
    "web-demo-client:dev": "yarn workspace dot-web-demo-client dev",
    "web-demo-client:build": "yarn codegen && yarn workspace dot-web-demo-client build",
    "ocr-demo-client:dev": "yarn workspace dot-web-ocr-demo-client dev",
    "ocr-demo-client:build": "yarn codegen && yarn workspace dot-web-ocr-demo-client build",
    "codegen": "yarn workspace dot-web-demo-server codegen",
    "build": "yarn workspaces run build",
    "prettier:check": "prettier -l \"packages/**/*.{ts,tsx,js,md}\"",
    "prettier": "prettier  --write \"packages/**/*.{ts,tsx,js,md}\"",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn lint --fix",
    "pr": "yarn run tsc && yarn run prettier:check && yarn run lint && yarn test",
    "test": "yarn workspaces run test",
    "test:ui": "yarn workspaces run test:ui",
    "tsc": "yarn workspaces run tsc",
    "cy:run": "cypress run --headless --browser chrome",
    "cy:open": "cypress open",
    "cy:run-headed": "cypress run --headed --browser chrome",
    "cy:server-headed": "start-server-and-test ci:dev http://localhost:3001 cy:run-headed",
    "ci:cy-run": "start-server-and-test ci:dev http://localhost:3001 cy:run",
    "ci:dev": "yarn server:dev & yarn workspace dot-web-demo-client dev",
    "postinstall": "husky install",
    "win-setup": "yarn config set script-shell \"C:\\Program Files\\Git\\bin\\bash.exe\""
  },
  "devDependencies": {
    "@innovatrics/eslint-config-typescript-react": "^0.0.8",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "@vitest/ui": "^0.24.3",
    "cypress": "^10.10.0",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "typescript": "~4.8.4"
  },
  "resolutions": {
    "@types/react": "^18.0.21"
  }
}
