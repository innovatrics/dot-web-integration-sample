{
  "name": "dot-web-demo-server",
  "version": "2.0.0",
  "description": "NodeJS GraphQL demo server.",
  "main": "dist/src/server.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start:local": "yarn build && yarn start",
    "start": "node dist/src/server.js",
    "dev": "yarn codegen && nodemon src/server.ts",
    "build": "rimraf dist && yarn codegen && tsc && cp src/graphQL/schema.graphql dist/src/graphQL/schema.graphql",
    "codegen": "graphql-codegen --config ./graphql-codegen.yml",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0"
  },
  "dependencies": {
    "apollo-server-express": "^3.10.3",
    "axios": "^1.1.3",
    "axios-mock-adapter": "^1.21.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.7",
    "@graphql-codegen/typescript": "^2.7.4",
    "@graphql-codegen/typescript-resolvers": "^2.7.4",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.2",
    "axios-mock-adapter": "^1.21.2",
    "eslint-plugin-graphql": "^4.0.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "vitest": "^0.24.3"
  }
}
