{
  "name": "dot-web-demo-server",
  "version": "2.1.7",
  "description": "NodeJS GraphQL demo server.",
  "main": "dist/src/server.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start:local": "pnpm build && pnpm start",
    "start": "node dist/src/server.js",
    "dev": "pnpm codegen && nodemon src/server.ts",
    "build": "rimraf dist && pnpm codegen && tsc && cp src/graphQL/schema.graphql dist/src/graphQL/schema.graphql",
    "codegen": "graphql-codegen --config ./graphql-codegen.yml",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0",
    "tsc": "tsc",
    "bump:version": "npm pkg set version=$VERSION"
  },
  "dependencies": {
    "@apollo/server": "^4.10.5",
    "@types/cors": "^2.8.17",
    "axios": "^1.7.2",
    "axios-mock-adapter": "^1.22.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.9.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-resolvers": "^4.2.1",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.12",
    "axios-mock-adapter": "^1.22.0",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.4"
  }
}
